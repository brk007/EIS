@{ Layout = "~/Views/Shared/_AdminPanelLayout.cshtml"; }

<div class="col-md-8">
    <a asp-action="AddRole" asp-controller="Admin" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>
            <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-success">Düzenle</a>
            <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
        </td>
    </tr>
        }
    </table>
</div>