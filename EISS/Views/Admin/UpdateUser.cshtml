@model UserUpdateViewModel

@{ Layout = "~/Views/Shared/_MyLayout.cshtml"; }


<form asp-action="UpdateUser" method="post" class="w-75" mx-auto p-3>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <span asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" />

        <label asp-for="@Model.Name"></label>
        <span asp-validation-for="@Model.Name"></span>
        <input asp-for="@Model.Name" class="form-control" />

        <label asp-for="@Model.Surname"></label>
        <span asp-validation-for="@Model.Surname"></span>
        <input asp-for="@Model.Surname" class="form-control" />

        <label asp-for="@Model.PhoneNumber"></label>
        <span asp-validation-for="@Model.PhoneNumber"></span>
        <input asp-for="@Model.PhoneNumber" class="form-control" />

        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="submit" class="btn btn-info" value="Kaydet" />
    </div>

</form>