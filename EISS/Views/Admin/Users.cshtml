@model List<AppUser>
@{ Layout = "~/Views/Shared/_AdminPanelLayout.cshtml"; }
<div class="col-md-8">
    <a asp-action="Index" asp-controller="Register" class="btn btn-info btn-sm my-2">Yeni Kullanıcı Ekle</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ad</th>
                <th scope="col">Email</th>
                <th scope="col">Rol</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td><ShowRole user-id="@item.Id"></ShowRole></td>
            <td>
                <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-success">Rol Düzenle</a>
                <a asp-action="UpdateUser" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
         }
        </table>
</div>
