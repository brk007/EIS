@{ Layout = "~/Views/Shared/_MyLayout.cshtml"; }

<div class="col-md-8">
    <a asp-action="AddAnnouncement" asp-controller="Announcements" class="btn btn-info btn-sm my-2">Yeni Duyuru Ekle</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Isim</th>
                <th scope="col">Tarihi</th>
            </tr>
        </thead>
        @if (User.Identity.IsAuthenticated & User.IsInRole("Admin,Boss"))
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td></td>
                    <td>
                        <a asp-action="UpdateAnnouncement" asp-route-id="@item.Id" class="btn btn-success">Düzenle</a>
                        <a asp-action="DeleteAnnouncement" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        }
        </table>
</div>